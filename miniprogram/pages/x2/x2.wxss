/**index.wxss**/
.card_wrap {
  background: #f2f2f6;
  position: relative;
  width: 100%;
  height: 100%
}
.card_wrap .card_item {
  position: absolute;
  width: 80%;
}
.card_wrap .card_item span.change_icon image {
  position: absolute;
  width: 200px;
  height: 200px;
  top: 30px;
  left: 27%;
  margin-left: -17px;
  box-shadow:none;
  margin-top:20rpx;

}
.card_wrap .card_item .card_info {
  position: absolute;
  height: 94px;
  width: 80%;
  border: 1px #E3E3E3 solid;
  border-top-width: 0;
 margin-top:60rpx;
}
.card_wrap .card_item .card_info .card_info_mes_title {
  font-size: 18px;
  line-height: 24px;
  margin-left: 28px;
  position: absolute;
  top: -12px;
  margin-top:-20rpx;
}
.card_wrap .card_item .card_info .card_info_mes_item {
  word-break: break-all;
  margin-left: 28px;
  display: block;
  font-size: 12px;
  line-height: 24px;
}



.card_wrap .card_item.card {
  /*top: 44px;
  left: 41px;*/
  /*z-index: 2;*/
  transform: translateY(50px) translateX(40px);
}
.card_wrap .card_item.card .card_info {
  top: 240px;
  left: 35px;
  border-color: #fff;
}

.card_wrap .card_item image {
  display: block;
  width: 100%;
  height: 500px;
  border-radius: 6px;
  box-shadow: 6px 23px 50px 10px #ccc;
}
